    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/Login/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/Login/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/css/Login/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <section>
                    <form id="account" class="login100-form validate-form" method="post">
                    <span class="login100-form-title">
                        @*<i class="zmdi zmdi-font"></i>*@
                        <img width="200" height="200" src="~/css/Sidebar/images/logo.png" />
                    </span>
                    <span class="login100-form-title p-b-26">
                        Login
                    </span>

                    <div asp-validation-summary="All" class="text-danger parsley-required"></div>
                    @*<div class="form-floating wrap-input100 validate-input" data-validate="Enter Username">
                        <input required asp-for="login.UserName" class="input100" type="text" name="UserName">
                        <span asp-for="login.UserName" class="focus-input100" data-placeholder="Username"></span>
                    </div>*@
                        <div class="form-floating wrap-input100 validate-input" data-validate="Enter Username">
                            <input asp-for="login.UserName" class=" input100" autocomplete="username" aria-required="true" />
                            
                            <span asp-validation-for="login.UserName" class="text-danger focus-input100" data-placeholder="Username"></span>
                        </div>
                        <div class="form-floating wrap-input100 validate-input">
                            <input asp-for="login.Password" class=" input100" autocomplete="current-password" aria-required="true" />
                           
                            <span asp-validation-for="login.Password" class="text-danger focus-input100" data-placeholder="Password"></span>
                        </div>
                    <div>
                        <div class="checkbox">
                            <label asp-for="login.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="login.RememberMe" />
                                @Html.DisplayNameFor(m => m.login.RememberMe)
                            </label>
                        </div>
                    </div>

                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn" type="submit">
                                Login
                            </button>
                        </div>
                    </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                   @* <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>*@
                </div>
                </form>
                </section>
            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>
    @section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
    <script src="vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="vendor/animsition/js/animsition.min.js"></script>
    <script src="vendor/bootstrap/js/popper.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="vendor/select2/select2.min.js"></script>
    <script src="vendor/daterangepicker/moment.min.js"></script>
    <script src="vendor/daterangepicker/daterangepicker.js"></script>
    <script src="vendor/countdowntime/countdowntime.js"></script>
    <script src="js/main.js"></script>

</body>
</html>

