@page
@model V___Medicals.Pages.Invoices.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "_DashBoardLayout";
}

<div class="text-center text-dark">
    <p class="text-center p-2 Monospace d-inline-flex border border-info">Invoices</p>
</div>

<p>
    <a class="btn btn-primary" asp-page="Create">Create New</a>
</p>
<div class="form-group">
    <div class="input-group p-0 col-lg-4 col-md-5 col-sm-6 col-xs-12">

        <select id="selectdoctor" asp-for="AppointmentId" class="form-control" asp-items="ViewBag.AppointmentId"><option value="-1" selected>Search by appointments</option></select>
        <div class="input-group-prepend">
            <button class="btn btn-primary" type="button"><i class="fas fa-search"></i></button>
        </div>
    </div>

</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Invoice Ref
            </th>
            <th>
                Doctor
            </th>
            <th>
                Patient
            </th>
            <th>
               Appointment
            </th>
            <th>
                Total Amount
            </th>
            <th>
                Paid Amount
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Status)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Invoice)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.InvoiceNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Appointment.Doctor.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Appointment.Patient.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Appointment.ClinicDate)
                    |
                    @Html.DisplayFor(modelItem => item.Appointment.Time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaidAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.InvoiceId"><i class="fa-solid fa-eye"></i></a> |
                    <a asp-page="./Edit" asp-route-id="@item.InvoiceId"><i class="fas fa-edit"></i></a> |
                    <a asp-page="./Delete" asp-route-id="@item.InvoiceId"><i class="fa-solid fa-trash text-danger"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
