@page
@using V___Medicals.Constants
@model V___Medicals.Pages.Clinics.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "_DashBoardLayout";
}

<h1>Edit</h1>

<h4>Clinic</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Clinic.ClinicId" />
            <div class="form-group">
                <label asp-for="Clinic.Name" class="control-label"></label>
                <input asp-for="Clinic.Name" class="form-control" />
                <span asp-validation-for="Clinic.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clinic.AddressLine" class="control-label"></label>
                <input asp-for="Clinic.AddressLine" class="form-control" />
                <span asp-validation-for="Clinic.AddressLine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clinic.District" class="control-label"></label>
                <input asp-for="Clinic.District" class="form-control" />
                <span asp-validation-for="Clinic.District" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clinic.City" class="control-label"></label>
                <input asp-for="Clinic.City" class="form-control" />
                <span asp-validation-for="Clinic.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clinic.PostalCode" class="control-label"></label>
                <input asp-for="Clinic.PostalCode" class="form-control" />
                <span asp-validation-for="Clinic.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clinic.MapLink" class="control-label"></label>
                <input asp-for="Clinic.MapLink" class="form-control" />
                <span asp-validation-for="Clinic.MapLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clinic.Summary" class="control-label"></label>
                <input asp-for="Clinic.Summary" class="form-control" />
                <span asp-validation-for="Clinic.Summary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clinic.Type" class="control-label"></label>
                <select asp-for="Clinic.Type" class="form-control" asp-items="Html.GetEnumSelectList<ClinicTypes>()"></select>
                <span asp-validation-for="Clinic.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clinic.Status" class="control-label"></label>
                <select asp-for="Clinic.Status" class="form-control" asp-items="Html.GetEnumSelectList<StatusTypes>()"> </select>
                <span asp-validation-for="Clinic.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
