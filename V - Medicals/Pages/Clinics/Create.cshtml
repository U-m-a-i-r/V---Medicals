@page
@using V___Medicals.Constants
@model V___Medicals.Pages.Clinics.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "_DashBoardLayout";
}

<a class="btn btn-primary" asp-page="./Index">Back</a>
<h4 class="text-center Monospace">Create New Clinic</h4>
<hr />
<div class="row my-3 justify-content-center">
    <div class="">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" id="lat" asp-for="InputModel.Latitude" class="form-control" />
            <input type="hidden" id="lng" asp-for="InputModel.Longitude" class="form-control" />
            <div class="row">
                <div class="form-group col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <label asp-for="DoctorId" class="control-label">Doctor</label>
                    <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.Doctor"></select>
                </div>
                <div class="form-group col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <label asp-for="InputModel.Name" class="control-label">Clinic Name</label>
                    <input placeholder="e.g remote clinic" asp-for="InputModel.Name" class="form-control" />
                    <span asp-validation-for="InputModel.Name" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <label asp-for="InputModel.AddressLine" class="control-label">Clinic Address</label>
                    <input id="pac-input" asp-for="InputModel.AddressLine" class="form-control" />
                    <span asp-validation-for="InputModel.AddressLine" class="text-danger"></span>
                </div>
                @*<div id="infowindow-content">
                <span id="place-name" class="title"></span><br />
                <span id="place-address"></span>
            </div>*@
                <div class="form-group col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <label asp-for="InputModel.District" class="control-label">State/Province</label>
                    <input id="state" asp-for="InputModel.District" class="form-control" />
                    <span asp-validation-for="InputModel.District" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <label asp-for="InputModel.City" class="control-label"></label>
                    <input id="locality" asp-for="InputModel.City" class="form-control" />
                    <span asp-validation-for="InputModel.City" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <label asp-for="InputModel.PostalCode" class="control-label">Postal Code</label>
                    <input id="postcode" asp-for="InputModel.PostalCode" class="form-control" />
                    <span asp-validation-for="InputModel.PostalCode" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <label asp-for="InputModel.MapLink" class="control-label">Map Link</label>
                    <input asp-for="InputModel.MapLink" class="form-control" />
                    <span asp-validation-for="InputModel.MapLink" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <label asp-for="InputModel.Summary" class="control-label"></label>
                    <textarea asp-for="InputModel.Summary" class="form-control"></textarea>
                    <span asp-validation-for="InputModel.Summary" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <label asp-for="InputModel.Type" class="control-label"></label>
                    <select asp-for="InputModel.Type" class="form-control" asp-items="Html.GetEnumSelectList<ClinicTypes>()"></select>
                    <span asp-validation-for="InputModel.Type" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <label asp-for="InputModel.Status" class="control-label"></label>
                    <select asp-for="InputModel.Status" class="form-control" asp-items="Html.GetEnumSelectList<StatusTypes>()"></select>
                    <span asp-validation-for="InputModel.Status" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <div class="form-group text-center my-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

