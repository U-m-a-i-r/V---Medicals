@page
@model V___Medicals.Pages.Clinics.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "_DashBoardLayout";
}

<p>
    <a asp-page="Create">Add New Clinic </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Clinic[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clinic[0].AddressLine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clinic[0].District)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clinic[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clinic[0].PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clinic[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Clinic) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressLine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.District)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ClinicId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ClinicId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ClinicId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
