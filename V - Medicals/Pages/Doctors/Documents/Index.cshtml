@page
@model V___Medicals.Pages.Doctors.Documents.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "_DashBoardLayout";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DoctorDocument[0].Doctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorDocument[0].DocumentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorDocument[0].DocumentPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorDocument[0].IsDeleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DoctorDocument) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DocumentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DocumentPath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.DoctorDocumentId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.DoctorDocumentId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.DoctorDocumentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
