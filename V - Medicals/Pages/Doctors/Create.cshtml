@page
@model V___Medicals.Pages.Doctors.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "_DashBoardLayout";
}

<h4>Create New Doctor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InputModel.Title" class="control-label"></label>
                <select asp-for="InputModel.Title" class="form-control" asp-items="Html.GetEnumSelectList<Title>()"></select>
                <span asp-validation-for="InputModel.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputModel.FirstName" class="control-label"></label>
                <input asp-for="InputModel.FirstName" class="form-control" />
                <span asp-validation-for="InputModel.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputModel.MiddleName" class="control-label"></label>
                <input asp-for="InputModel.MiddleName" class="form-control" />
                <span asp-validation-for="InputModel.MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputModel.LastName" class="control-label"></label>
                <input asp-for="InputModel.LastName" class="form-control" />
                <span asp-validation-for="InputModel.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputModel.Gender" class="control-label"></label>
                <select asp-for="InputModel.Gender" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()"></select>
                <span asp-validation-for="InputModel.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputModel.SpecialityId" class="control-label">Speciality</label>
                <select asp-for="InputModel.SpecialityId" class="form-control" asp-items="ViewBag.Specialityid"></select>
            </div>
            <div class="form-group">
                <label asp-for="InputModel.DOB" class="control-label"></label>
                <input type="date" asp-for="InputModel.DOB" class="form-control" />
                <span asp-validation-for="InputModel.DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputModel.Email" class="control-label"></label>
                <input asp-for="InputModel.Email" class="form-control" />
                <span asp-validation-for="InputModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputModel.PhoneNumber" class="control-label"></label>
                <input asp-for="InputModel.PhoneNumber" class="form-control" />
                <span asp-validation-for="InputModel.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputModel.AddressLine" class="control-label"></label>
                <input asp-for="InputModel.AddressLine" class="form-control" />
                <span asp-validation-for="InputModel.AddressLine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputModel.District" class="control-label"></label>
                <input asp-for="InputModel.District" class="form-control" />
                <span asp-validation-for="InputModel.District" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputModel.City" class="control-label"></label>
                <input asp-for="InputModel.City" class="form-control" />
                <span asp-validation-for="InputModel.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputModel.PostalCode" class="control-label"></label>
                <input asp-for="InputModel.PostalCode" class="form-control" />
                <span asp-validation-for="InputModel.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputModel.ProfilePicture" class="control-label"></label>
                <input asp-for="InputModel.ProfilePicture" accept=".png,.jpeg,.jpg" class="form-control" />
                <span asp-validation-for="InputModel.ProfilePicture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputModel.Qualification" class="control-label"></label>
                <input asp-for="InputModel.Qualification" class="form-control" />
                <span asp-validation-for="InputModel.Qualification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputModel.Discription" class="control-label"></label>
                <textarea asp-for="InputModel.Discription" class="form-control"></textarea>
                <span asp-validation-for="InputModel.Discription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputModel.Status" class="control-label"></label>
                <select asp-for="InputModel.Status" class="form-control" asp-items="Html.GetEnumSelectList<DoctorStatusTypes>()"></select>
                <span asp-validation-for="InputModel.Status" class="text-danger"></span>
            </div>
            @*<div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Doctor.IsDeleted" /> @Html.DisplayNameFor(model => model.Doctor.IsDeleted)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Doctor.Id" class="control-label"></label>
                <select asp-for="Doctor.Id" class ="form-control" asp-items="ViewBag.Id"></select>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
