@page
@model V___Medicals.Pages.Specialities.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "_DashBoardLayout";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Speciality[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Speciality[0].Icon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Speciality[0].IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Speciality) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    <img src="~/Files/@item.Icon"
                     class="rounded-circle"
                     height="40" width="40"
                     asp-append-version="true" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SpecialityId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.SpecialityId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.SpecialityId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
