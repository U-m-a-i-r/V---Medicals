@page
@model V___Medicals.Pages.Specialities.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "_DashBoardLayout";
}

<div class="text-center text-dark">
    <p class="text-center p-2 Monospace d-inline-flex border border-info">Specialities</p>
</div>

<p>
    <a class="btn btn-primary" asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Speciality[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Speciality[0].Icon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Speciality[0].IsActive)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Speciality)
        {
            <tr>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.SpecialityId"> @Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td>
                    <img src="~/Files/@item.Icon"
                         class="rounded-circle shadow"
                         height="40" width="40"
                         asp-append-version="true" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.SpecialityId"><i class="fa-solid fa-eye"></i></a> |
                    <a asp-page="./Edit" asp-route-id="@item.SpecialityId"><i class="fas fa-edit"></i></a> |
                    <a asp-page="./Delete" asp-route-id="@item.SpecialityId"><i class="fa-solid fa-trash text-danger"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
