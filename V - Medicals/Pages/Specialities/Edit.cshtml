@page
@model V___Medicals.Pages.Specialities.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "_DashBoardLayout";
}

<a class="btn btn-primary" asp-page="./Index">Back</a>
<h4 class="text-center Monospace">Edit Speciality</h4>
<hr />
<div class="row my-3 justify-content-center">
    <div class="">
        <form method="post">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Speciality.SpecialityId" />
                <div class="form-group col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <label asp-for="Speciality.Name" class="control-label"></label>
                    <input asp-for="Speciality.Name" class="form-control" />
                    <span asp-validation-for="Speciality.Name" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Speciality.CreatedOn" class="form-control" />
                <input type="hidden" asp-for="Speciality.CreatedBy" class="form-control" />
                <div class="form-group col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <label asp-for="Speciality.Icon" class="control-label"></label>
                    <input asp-for="Speciality.Icon" class="form-control" />
                    <span asp-validation-for="Speciality.Icon" class="text-danger"></span>
                </div>
                <div class="form-group ml-3 form-check col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Speciality.IsActive" /> @Html.DisplayNameFor(model => model.Speciality.IsActive)
                    </label>
                </div>
                </div>
            <hr />
                <div class="form-group text-center my-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>

