            <!--</th>-->
            <th>
                Appointment
                @*@Html.DisplayNameFor(model => model.Appointment[0].Time)*@
            </th>
            <th>
                Speciality
                    @*@Html.DisplayNameFor(model => model.Appointment[0].SpecialityName)*@
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Appointment[0].Description)
            </th>*@
            @*<th>
                @Html.DisplayNameFor(model => model.Appointment[0].AppointmentType)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Status)
            </th>
