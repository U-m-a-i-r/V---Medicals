                        @Html.DisplayFor(modelItem => item.UpdatedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastModifiedBy)
                    </td>*@
            <td>
                <a asp-page="./Details" asp-route-id="@item.AppointmentId"><i class="fa-solid fa-eye"></i></a> |
                <a asp-page="./Edit" asp-route-id="@item.AppointmentId"><i class="fas fa-edit"></i></a> |
                <a asp-page="./Delete" asp-route-id="@item.AppointmentId"><i class="fa-solid fa-trash text-danger"></i></a>
            </td>
            </tr>
        }
    </tbody>
</table>
