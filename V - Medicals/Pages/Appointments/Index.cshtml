@model V___Medicals.Pages.Appointments.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "_DashBoardLayout";
}

<div class="text-center text-dark">
    <p class="text-center p-2 Monospace d-inline-flex border border-info">Appointments</p>
</div>

<p class="d-flex justify-content-between">
    <a class="btn btn-primary" asp-page="Create">Create New</a>
    <a class="btn btn-secondary" asp-page-handler="ExportCsv">Export CSV</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Patient)
            </th>
