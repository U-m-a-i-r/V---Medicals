@model V___Medicals.Pages.Patients.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "_DashBoardLayout";
}

<a class="btn btn-primary" asp-page="./Index">Back</a>
<h4 class="text-center Monospace"> New Patient</h4>
<hr />
<div class="row justify-content-center mt-3">
    <div class="">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-3">
                <div class="form-group col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <label asp-for="InputModel.Title" class="control-label"></label>
                    <select asp-for="InputModel.Title" class="form-control" asp-items="Html.GetEnumSelectList<Title>()"></select>
                    <span asp-validation-for="InputModel.Title" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <label asp-for="InputModel.FirstName" class="control-label"></label>
                    <input asp-for="InputModel.FirstName" class="form-control" />
                    <span asp-validation-for="InputModel.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <label asp-for="InputModel.MiddleName" class="control-label"></label>
                    <input asp-for="InputModel.MiddleName" class="form-control" />
                    <span asp-validation-for="InputModel.MiddleName" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <label asp-for="InputModel.LastName" class="control-label"></label>
                    <input asp-for="InputModel.LastName" class="form-control" />
                    <span asp-validation-for="InputModel.LastName" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <label asp-for="InputModel.Gender" class="control-label"></label>
                    <select asp-for="InputModel.Gender" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()"></select>
                    <span asp-validation-for="InputModel.Gender" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <label asp-for="InputModel.DOB" class="control-label"></label>
                    <input type="date" asp-for="InputModel.DOB" class="form-control" />
                    <span asp-validation-for="InputModel.DOB" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <label asp-for="InputModel.Email" class="control-label"></label>
                    <input asp-for="InputModel.Email" class="form-control" />
                    <span asp-validation-for="InputModel.Email" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <label asp-for="InputModel.PhoneNumber" class="control-label"></label>
                    <input asp-for="InputModel.PhoneNumber" class="form-control" />
                    <span asp-validation-for="InputModel.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <label asp-for="InputModel.CNIC" class="control-label"></label>
                    <input asp-for="InputModel.CNIC" class="form-control" />
                    <span asp-validation-for="InputModel.CNIC" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <label asp-for="InputModel.Address!.AddressLine" class="control-label">Address</label>
                    <input asp-for="InputModel.Address!.AddressLine" class="form-control" />
                    <span asp-validation-for="InputModel.Address!.AddressLine" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <label asp-for="InputModel.Address!.District" class="control-label">State/Province</label>
                    <input asp-for="InputModel.Address!.District" class="form-control" />
                    <span asp-validation-for="InputModel.Address!.District" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <label asp-for="InputModel.Address!.City" class="control-label"></label>
                    <input asp-for="InputModel.Address!.City" class="form-control" />
                    <span asp-validation-for="InputModel.Address!.City" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <label asp-for="InputModel.Address!.PostalCode" class="control-label">Postal Code</label>
                    <input asp-for="InputModel.Address!.PostalCode" class="form-control" />
                    <span asp-validation-for="InputModel.Address!.PostalCode" class="text-danger"></span>
                </div>
                </div>
            <hr />
                <div class="form-group text-center mt-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>

